{% extends 'base.html.twig' %}

{% block body %}

    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Écrit le : {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <hr>
            <p>{{ article.content }}</p>
            <a href="{{ path('blog_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier l'article</a>
            <a href="{{ path('blog_delete', {'id': article.id}) }}" class="btn btn-danger">Supprimer l'article</a>
        </div>
    </article>

{% endblock %}